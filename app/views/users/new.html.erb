<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

       <div class="form-group">
         <%= f.label :名前（必須）, :class => "col-sm-3 countrol-label" %>
         <div class="col-sm-7">
           <%= f.text_field :name, :class => "form-control" %>
         </div>
       </div>

      <div class="form-group">
        <%= f.label :メール（必須）, :class => "col-sm-3 countrol-label" %>
        <div class="col-sm-7">
          <%= f.text_field :email, :class => "form-control" %>
        </div>
      </div>
  
      <div class="form-group">
        <%= f.label :パスワード（必須）, :class => "col-sm-3 countrol-label" %>
        <div class="col-sm-7">
          <%= f.text_field :password, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード確認（必須）", :class => "col-sm-3 countrol-label" %>
        <div class="col-sm-7">
          <%= f.password_field :password_confirmation, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
         <%= f.label :性別, :class => "col-sm-3 countrol-label" %>
         <div class="col-sm-7">   
           <label><%= f.radio_button :sex, "男" %>男</label>
           <label><%= f.radio_button :sex, "女" %>女</label>
         </div>
      </div>      

      <div class="form-group">
        <%= f.label :プロフィール, :class => "col-sm-3 countrol-label" %>
        <div class="col-sm-7">
          <%= f.text_field :profile, :class => "form-control" %>
        </div>
      </div>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>